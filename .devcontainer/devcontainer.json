{
    "name": "Kaggle Dev CPU",
    "image": "gcr.io/kaggle-images/python", // Remember to pull latest before rebuilding.
    
    "forwardPorts": [8888],
    "shutdownAction": "none",

    "mounts": [
        "source=${localWorkspaceFolder}/kaggle.json,target=/root/.kaggle/kaggle.json,type=bind,consistency=cached",
        // "source=${localWorkspaceFolder}/.gitignore,target=/kaggle/.gitignore,type=bind,consistency=cached",
      ],

    "workspaceMount": "source=${localWorkspaceFolder},target=/kaggle,type=bind",
    "workspaceFolder": "/kaggle",
    
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "python.pythonPath": "/opt/conda/bin/python"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "eamodio.gitlens",
                "streetsidesoftware.code-spell-checker",
                "rioj7.command-variable"
            ]
        }
    },
    "containerEnv": {
        "DEVELOPMENT_MODE": "LOCAL"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "postAttachCommand": "bash /kaggle/.devcontainer/config-git.sh"
}